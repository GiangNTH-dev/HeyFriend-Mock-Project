<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homepage.LoginFragment"
    android:background="@color/backgroundColor"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="HEY, FRIEND!"
                    android:fontFamily="@font/besty"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                  android:layout_gravity="center"
                    android:textSize="30dp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Keep tracking with your friends"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    ></TextView>
                <LinearLayout
                    android:id="@+id/loginFacebook"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    tools:ignore="OnClick">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/logofb"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login with Facebook"
                            android:textColor="@color/cardview_dark_background"
                            android:padding="5dp"
                           />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/loginTwitter"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    >
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/logotwitter"
                            android:layout_gravity="center"
                            android:paddingLeft="5dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login with Twitter"
                            android:textColor="@color/twitterColor"
                            android:padding="5dp"
                            android:gravity="center"
                            />
                </LinearLayout>


        </LinearLayout>



</RelativeLayout>